//	public static int bitness = Integer.parseInt(System.getProperty("sun.arch.data.model"));
	

	public static String getDLLFileName(){
		String os = getOS();
		int bitness = getBitness();
		
		if (os.equals("windows")){
			if (bitness == 64) return "DynamixelControl64";
			else return "DynamixelControl32";
		}
		else if(os.equals("linux")){
			if (bitness == 64) return "DynamixelControl64";
			else return "DynamixelControl32";
		}
		else return null;
	}

	public static String getOS(){
		String fullOS = System.getProperty("os.name");
		
		if(fullOS.toLowerCase().contains("windows")) return "windows";
		if(fullOS.toLowerCase().contains("linux")) return "linux"; // eller bare sjekke om den inneholder "u"?
		else return null;	
	}
	
	
	public static int getBitness(){
		return Integer.parseInt(System.getProperty("sun.arch.data.model"));
	}
	
